<div class="container mx-auto px-4">

  <div class="mt-8 text-center mb-8">
    <%= link_to "Add Todo", new_todo_path, class: "bg-blue-500 text-white px-4 py-2 rounded-md" %>
  </div>

  <h3 class="text-2xl mb-5 text-center">You have <%= pluralize(@uncompleted_todos_count, "thing") %> to do today</h3>

  <div class="w-1/2 mx-auto">
    <ul class="pl-5">
      <% @todos.each do |todo| %>
        <li class="mb-2">
          <div class="flex justify-between items-center bg-gray-50 p-2 rounded-md">
            <div class="text-lg text-gray-500 p-2">
              <%= todo.title %>
            </div>
            <div class="flex space-x-2">
              <% if todo.completed? %>
                <span>
                  <%= link_to toggle_completed_todo_path(todo), data: { turbo_method: :patch } do %>
                    <i class="fas fa-times text-blue-500 mr-4"></i>
                  <% end %>
                </span>
              <% else %>
                <span>
                  <%= link_to toggle_completed_todo_path(todo), data: { turbo_method: :patch } do %>
                    <i class="fas fa-check text-green-500 mr-4"></i>
                  <% end %>
                </span>
              <% end %>
              <span>
                <%= link_to edit_todo_path(todo) do %>
                  <i class="fas fa-edit text-yellow-500 mr-4"></i>
                <% end %>
              </span>
              <span>
                <%= link_to todo_path(todo), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                  <i class="fas fa-trash text-red-500"></i>
                <% end %>
              </span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

</div>