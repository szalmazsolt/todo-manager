<div class="container mx-auto px-4">

  <div class="mt-8 text-center mb-8">
    <%= link_to "Add Todo", new_todo_path, class: "bg-blue-500 text-white px-4 py-2 rounded-md" %>
  </div>

  <h3 class="text-2xl mb-5 text-center">You have <%= pluralize(@uncompleted_todos_count, "thing") %> to do today</h3>

  <div class="w-1/2 mx-auto">
    <ul class="pl-5">
      <% @todos.each do |todo| %>
        <li class="mb-2">
          <div class="flex justify-between items-center bg-gray-100 p-2 rounded-md">
            <div class="text-lg">
              <%= todo.title %>
            </div>
            <div class="flex space-x-2">
              <% if todo.completed? %>
                <span>
                  <%= link_to "Mark as uncompleted", toggle_completed_todo_path(todo), class: "text-blue-500", data: { turbo_method: :patch } %>
                </span>
              <% else %>
                <span>
                  <%= link_to "Mark as completed", toggle_completed_todo_path(todo), class: "text-green-500", data: { turbo_method: :patch } %>
                </span>
              <% end %>
              <span>
                <%= link_to "Edit", edit_todo_path(todo), class: "text-yellow-500" %>
              </span>
              <span>
                <%= link_to "Delete", todo_path(todo), class: "text-red-500", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
              </span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

</div>