<% if active_record_obj.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 mb-6 px-4 py-3 rounded relative" role="alert">
    <strong class="font-bold">
      <%= pluralize(active_record_obj.errors.size, "error") %>
       prohibited this <%= model %> from being saved:
    </strong>
    <ul class="list-disc list-inside">
      <% active_record_obj.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>